#!/usr/bin/env bash
# This script reads the /etc/passwd file line by line and displays the username,
# user ID, and home directory path.

# Set the Internal Field Separator (IFS) to a colon (:)
# This tells the read command to split the input line at every colon.
IFS=:

# Read the file line by line. We only assign variables to the fields we need.
# The unused fields are assigned to '_' to satisfy Shellcheck.
while read -r username _ uid _ _ home _; do
    # Display the three required fields separated by colons.
    echo "${username}:${uid}:${home}"
done < /etc/passwd
